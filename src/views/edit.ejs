<% include partials/_header%>

<div class="container pt-3">
    <div class="row content-center">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-head text-center bg-light">
                    <h3 class="h3">Edit the Task</h3>
                </div>
                <div class="card-body">
                    <form action="/update/<%=task._id%>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="<%=task.title%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" cols="80" class="form-control"
                                placeholder="<%=task.description%>"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Edit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<% include partials/_footer%>