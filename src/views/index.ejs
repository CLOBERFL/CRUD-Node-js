<% include partials/_header%>



<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Inserta un titulo" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" cols="80" class="form-control"
                                placeholder="Inserta una descripcion"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th class="">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < tasks.length; i++) { %>
                    <tr>
                        <td><%= i + 1  %></td>
                        <td><%= tasks[i].title %></td>
                        <td><%= tasks[i].description %></td>
                        <td><a href="/turn/<%= tasks[i]._id %>" class="btn <%= !tasks[i].status ? 'btn-success' : 'btn-dark' %> m-1">Done</a>
                            <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger m-1">X</a>
                            <a href="#" class="btn btn-info m-1">Edit</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

        </div>
    </div>
</div>

<% include partials/_footer%>